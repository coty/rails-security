!!! Strict
%html
  %head
    %title
      = h(yield(:title) || "Untitled")
    = stylesheet_link_tag 'application'
    = yield(:head)
  %body
    #container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
        
      #main-nav
        = link_to "Users", "/users"
        |
        = link_to "Groups", "/groups"
      
      %p
        = render :partial => "/users/search"
        
      - if show_title?
        %h1
          = h yield(:title)
        
      = yield
